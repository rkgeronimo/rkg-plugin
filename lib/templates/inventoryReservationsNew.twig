{% block content %}
    <div class="wrap">
        <h1 id="add-new-inventory" class="wp-heading-inline">Izdavanje opreme</h1>
        <a href="{{site.url}}/wp/wp-admin/admin.php?page=reservations_new" class="page-title-action">Dodaj novu rezervaciju</a>
    </div>
        <table class="wp-list-table widefat fixed striped users">
            <thead>
                <tr>
                    <th scope="col" class="manage-column column-name">Korisnik</th>
                    {% for type in typeTranslation %}
                        <th scope="col" id="name" class="manage-column column-name">{{ type }}</th>
                    {% endfor %}
                    <th scope="col" class="manage-column column-name">Komentar</th>
                    <th scope="col" class="manage-column column-name"></th>
            </thead>

            <tbody id="the-list" data-wp-lists="list:user">
                <form method="post" action="admin.php?page=reservations">
                    <input type="hidden" name="reservation" value="{{ reservation.id }}" />
                    <tr class="reservation-resolve">
                        <td class="name column-name" data-colname="Ime">
                            <select class="iid" id="niid" style="width: 70%" name="id">
                                <option value="" disabled selected></option>
                                {% for userItem in userList %}
                                    <option value="{{ userItem.ID }}"{{ userItem.ID == user.ID ? ' selected' }}>{{ userItem.data.display_name }}</option>
                                {% endfor %}
                            </select>
                        </td>
                        {% for key,type in typeTranslation %}
                            <td scope="col" id="name" class="manage-column column-name">
                                    <input class="iid" name="{{ key }}" type="text" placeholder="Å ifra" style="width: 70%" value="{{ attribute(reservation, key) }}"/>
                            </td>
                        {% endfor %}
                            <td scope="col" id="name" class="manage-column column-name">
                                <span class="dashicons dashicons-admin-comments rkg-popover-control"></span>
                                <div class="rkg-popover"><textarea name="other"></textarea></div>
                            </td>
                        <td class="name column-name" data-colname="Ime">
                            <input type="submit" name="createuser" id="createusersub" class="button button-primary" value="Spremi">
                        </td>
                    </tr>
                </form>
            </tbody>

        </table>
{% endblock %}
